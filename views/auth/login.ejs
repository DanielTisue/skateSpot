<% layout('/layouts/boilerplate') %>


       <div class="row">
        <h1 class="text-center mb-3">Log In</h1>
        <hr class="mb-3">
        <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
           <form action="/login" method="POST" class="validated-form" novalidate>
                <div class="form-group mb-3">
                    <input class="form-control" type="text" name="username" placeholder="Username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group mb-3">
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="form-group mb-3">
                    <button class="btn btn-sm btn-primary btn-block" ><i class="fas fa-sign-in-alt"></i>Submit</button>
                </div>
            </form> 
            <a href="/forgot" class="btn btn-secondary btn-sm"><i class="fas fa-question"></i>Forgot Password...</a>
        </div>
    </div> 



