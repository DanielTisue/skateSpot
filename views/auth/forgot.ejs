<% layout('/layouts/boilerplate') %>

<div class="row">
     <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
        <h2>
          Forgot Your Password...
        </h2>
        <h5 class="mb-3">Don't worry, you'll get a new one.</h5>
        <hr class="mb-3">
      <form action="/forgot" method="POST">   
        <div class="form-group mb-4">
          <input type="email" name="email" autofocus class="form-control" placeholder="enter your email here">
        </div>
        <div class="form-group">
          <i class="fas fa-sign-in-alt"></i>
          <input type="submit" class="btn btn-sm btn-primary" value="Reset Password">
        </div>
      </form>
    </div>
</div>
