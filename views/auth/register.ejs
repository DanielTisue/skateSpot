<% layout('/layouts/boilerplate') %>


       <div class="row">
        <h1 class="text-center">Sign Up</h1>
        <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
           <form action="/register" method="POST" class="validated-form" novalidate>
                <div class="form-group">
                  <input class="form-control mb-3" type="text" id="username" name="username" placeholder="username" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="form-group">
                  <input class="form-control mb-3" type="email" id="email" name="email" placeholder="email" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="form-group">
                  <input class="form-control mb-3" type="password" id="password" name="password" placeholder="password" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block" ><i class="fas fa-sign-in-alt"></i>Submit</button>
                </div>
            </form> 
        </div>
    </div> 


