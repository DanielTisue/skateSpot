<% layout('/layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center mb-3"> Edit Your Skate Spot:</h1>
  <hr class="mb-3">
  <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
    <form action="/skatespots/<%= skatespot._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <input class="form-control text-muted" type="text" name="skatespot[name]" placeholder="name" value="<%= skatespot.name %>" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
       <div class="mb-3">
         <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control text-muted" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="skatespot[price]" value="<%= skatespot.price %>" required>
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
     
       <div class="mb-3">
                <div class="form-file custom-file">
                  
                    <input type="file" class="form-file-input form-control" id="image" name="image" multiple>
                    <label class="form-file-label mb-2" for="image">
                        <em><span class="form-file-text custom-file-label text-muted"><small>Add an image or mutliple images to your existing spot image collection ...</small></span></em>
                    </label>
                </div>
      </div>

      <div class="mb-3">
        <p class="text-muted"><small>Your current spot image(s):</small></p>
        <div class="row">
         <% skatespot.images.forEach ((img, i) => { %>
                <div class="mb-3 col-md-4">
                    <img src="<%= img.thumbnail %>" alt="...">
                <div class="form-check-inline">
                  <input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value="<%=img.filename%>">
                  <label class="text-muted" for="image-<%=i%>"><small>Delete</small></label>
                </div>
                </div>
        <% }) %> 
        </div>
      </div>
     
      
      <div class="mb-3">
        <textarea class="form-control text-muted" type="text" id="description" name="skatespot[description]" placeholder="Street spot or Park spot"><%= skatespot.description %></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
      </div>
      <div class="mb-3">
        <input class="form-control text-muted" type="text" name="skatespot[location]" placeholder="location" value="<%= skatespot.location %>" required>
         <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary btn-block"><i class="fas fa-sign-in-alt"></i>Update spot</button>
      </div>
    </form>
  </div>
</div>




