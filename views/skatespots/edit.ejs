<% layout('/layouts/boilerplate') %>

<div class="row">
  <h2 style="text-align: center">
    Edit Your<br />
    SkateSpot:
    <hr />
    <h1 style="text-align: center"><%= skatespot.name %></h1>
  </h2>
  <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
    <form
      action="/skateSpots/<%= skatespot._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="skatespot[name]"
          value="<%= skatespot.name %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="file"
          name="image"
          value="<%= skatespot.image %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="skatespot[description]"
          value="<%= skatespot.description %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="location"
          id="location"
          value="<%= skatespot.location %>"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block"><i class="fas fa-sign-in-alt"></i>Submit!</button>
      </div>
    </form>
  </div>
</div>


