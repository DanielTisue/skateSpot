<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>Skate Spots</h1>
        <h3>Search for Spots<br />closest to you below!</h3>

        <p id="addNewSpot">
          <a class="btn btn-primary btn-large" href="/skateSpots/new"
            >Add New Skate Spot</a
          >
        </p>
        <!-- <p>
          <form action="/skateSpots" method="GET" class="form-inline">
            <div class="form-group">
              <input type="text" name="search" placeholder="Skate Spot search..." class="form-control">
              <input type="submit" value="Search" class="btn btn-default">
            </div>
          </form>
        </p> -->
      </div>
    </div>
  </div>
</header>

<div class="row text-center">
  <div class="col-md-12">
    <% if(noMatch !== null) { %>
      <h3><%= noMatch %></h3>
    <% } %>
  </div>
</div>

<hr/>

<% skatespots.forEach(function(skatespot){ %>
    <div class="row" id="section">
      <div class="col-sm-12 sectionSkate">
        <div class="row text-center">
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" id="one">
            <p class="text-left">
              <img
                src="<%= skatespot.image.url %>"
                class="thumbnail"
                id="indexImg"
              />
            </p>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4  text-right" id="two">
            <h4><%= skatespot.name %></h4>
            <p><%= skatespot.location %></p>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4  text-right">
            <p>
              <a class="btn btn-primary" href="/skateSpots/<%= skatespot._id %>"
                >Spot Details...</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>
<% }); %> 
<div class="row text-center">
    <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/skateSpots<%if(search){%>?search=<%=search%><%}%>">First</a></li>
            <% } %>
    
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
            <% } %>
    
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
    
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
            <% } %>
    
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
            <% } %>
        </ul>
    <% } %>
</div>
<% include ../partials/footer %>