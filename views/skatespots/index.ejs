<% layout('/layouts/boilerplate') %>
<div class="p-md-5 p-sm-1 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold"><i class="fas fa-globe-americas"></i>Skate Spots</h1>
    <p class="col-md-8 fs-4">Search for spots closest to you below!</p>
    <a class="btn btn-primary btn-sm mb-4" type="button"href="/skatespots/new">
      <i class="fas fa-plus"></i>Add Skate Spot
    </a>
    <form action="/skatespots" method="GET" class="form-inline">
      <div class="form-group mb-4">
        <input type="text" name="search" placeholder="Skate Spot search..." class="form-control">
      </div>
      <div class="form-group">
        <input type="submit" value="Search" class="btn btn-secondary btn-sm">
      </div>
    </form>
  </div>
</div>


<div class="row text-center">
  <div class="col-md-12">
    <% if(noMatch !== null) { %>
      <h3><%= noMatch %></h3>
    <% } %>
  </div>
</div>

<hr/>

<div class="row">
  <% skatespots.forEach(function(skatespot){ %>
    <div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%= skatespot.image.url %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-name"><%= skatespot.name %> </h5>
                <p class="card-text"><%= skatespot.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= skatespot.location %></small>
                </p>
                <a class="btn btn-primary" href="/skatespots/<%= skatespot._id %>">Details...</a>
            </div>
        </div>
    </div>
</div>
  <% }); %>
</div>



<div class="row text-center">
    <% if (pages && pages > 0) { %>
        <ul class="pagination text-center">
            <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
            <% } else { %>
            <li><a href="/skateSpots<%if(search){%>?search=<%=search%><%}%>">First</a></li>
            <% } %>
    
            <% if (current == 1) { %>
            <li class="disabled"><a>«</a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
            <% } %>
    
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li class="active"><a><%= i %></a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li class="disabled"><a>...</a></li>
            <% } %>
            <% } %>
    
            <% if (current == pages) { %>
            <li class="disabled"><a>»</a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
            <% } %>
    
            <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
            <% } else { %>
            <li><a href="/skateSpots?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
            <% } %>
        </ul>
    <% } %>
</div>
