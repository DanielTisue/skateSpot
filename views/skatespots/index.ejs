<% include ../partials/header %>
<div class="container">
        <header class="jumbotron">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <h1>Skate Spots</h1>
                        <h3>Search for Spots closest to you below!</h3>
                        <p>
                            <a class="btn btn-primary btn-large" href="/skateSpots/new">Add New SkateSpot</a>
                        </p>
                    </div>
                </div>
            </div>
        </header>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% skatespots.forEach(function(skatespot){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">    
                    <img src="<%= skatespot.image %>">
                    <div class="caption">
                        <h4><%= skatespot.name %></h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/skateSpots/<%= skatespot._id %>">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>