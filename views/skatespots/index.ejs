<% include ../partials/header %>

<header class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <h1>Skate Spots</h1>
        <h3>Search for Spots<br />closest to you below!</h3>

        <p id="addNewSpot">
          <a class="btn btn-primary btn-large" href="/skateSpots/new"
            >Add New Skate Spot</a
          >
        </p>
      </div>
    </div>
  </div>
</header>
<hr />

<% skatespots.forEach(function(skatespot){ %>
<div class="row" id="section">
  <div class="col-sm-12 sectionSkate">
    <div class="row text-center">
      <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" id="one">
        <p class="text-left">
          <img
            src="<%= skatespot.image.url %>"
            class="thumbnail"
            id="indexImg"
          />
        </p>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4  text-right" id="two">
        <h4><%= skatespot.name %></h4>
        <p><%= skatespot.location %></p>
      </div>
      <div class="col-lg-4 col-md-4 col-sm-4  text-right">
        <p>
          <a class="btn btn-primary" href="/skateSpots/<%= skatespot._id %>"
            >Spot Details...</a
          >
        </p>
      </div>
    </div>
  </div>
</div>
<% }); %> 
<% include ../partials/footer %>