<% layout('/layouts/boilerplate') %>


<div class="row">
  <h1 class="text-center mb-3">Add a New SkateSpot</h1>
  <hr class="mb-3">
  <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
    <form action="/skatespots" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <input class="form-control" type="text" name="skatespot[name]" placeholder="name" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
       <div class="mb-3">
         <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="skatespot[price]" required>
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      
      <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input form-control" id="image" name="image" multiple>
                    <label class="form-file-label mb-2" for="image">
                        <em><span class="form-file-text custom-file-label text-muted"><small>Choose an image or mutliple image(s)...</small></span></em>
                    </label>
                </div>
      </div>
      
      <div class="mb-3">
        <textarea class="form-control" type="text" id="description" name="skatespot[description]" placeholder="Street spot or Park spot" required></textarea>
        <div class="valid-feedback">
            Looks good!
        </div>
      </div>
      <div class="mb-3">
        <input class="form-control" type="text" name="skatespot[location]" placeholder="location" required>
         <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary btn-block"><i class="fas fa-sign-in-alt"></i>Add spot</button>
      </div>
    </form>
  </div>
</div>


