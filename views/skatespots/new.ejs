<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center">Add a New SkateSpot</h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/skateSpots" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="name"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="file"
          name="image"
          accept="image/*"
          id="chooseFile"
          placeholder="...choose an image to upload"
          required
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="description"
          placeholder="description"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="location"
          placeholder="location"
          id="location"
        />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block"><i class="fas fa-sign-in-alt"></i>Submit!</button>
      </div>
    </form>
  </div>
</div>

<% include ../partials/footer %>
