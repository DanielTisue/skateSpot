<% layout('/layouts/boilerplate') %>


<div class="row">
  <h1 class="text-center">Add a New SkateSpot</h1>
  <div class="col-md-6 offset-md-3 col-sm-12 offset-sm-0">
    <form action="/skateSpots" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
      <div class="form-group input-group-sm mb-3">
        <input
          class="form-control"
          type="text"
          name="name"
          placeholder="name"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="form-group input-group-sm mb-3">
        <input
          class="form-control"
          type="file"
          name="image"
          accept="image/*"
          id="chooseFile"
          placeholder="...choose an image to upload"
          required
        />
      </div>
      <div class="form-group input-group-sm mb-3">
        <input
          class="form-control"
          type="text"
          name="description"
          placeholder="description"
          required
        />
      </div>
      <div class="form-group input-group-sm mb-3">
        <input
          class="form-control"
          type="text"
          name="location"
          placeholder="location"
          id="location"
          required
        />
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block"><i class="fas fa-sign-in-alt"></i>Submit!</button>
      </div>
    </form>
  </div>
</div>


