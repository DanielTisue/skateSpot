<% include ./partials/header %>


       <div class="row">
        <h1 style="text-align: center">Log In</h1>
        <div style="width: 30%; margin: 25px auto">
           <form action="/login" method="POST">
                <div class="form-group">
                     <input class="form-control" autofocus type="username" name="username" placeholder="username">
                </div>
                <div class="form-group">
                     <input class="form-control" autofocus type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" ><i class="fas fa-sign-in-alt"></i>Submit</button>
                </div>
            </form> 
            <a href="/forgot" class="btn btn-default btn-sm"><i class="fas fa-question"></i>Forgot Password...</a>
        </div>
    </div> 



<% include ./partials/footer %>